@model dojo_activities.Models.MeetViewModel

<form class="addMeet" asp-controller="Activity" asp-action="Add" method="post">
    <div>
        <label asp-for="Title"></label>
        <input asp-for="Title"/>
        <span asp-validation-for="Title"></span>
        <label asp-for="Date"></label>
        <input asp-for="Date"/>
        <span asp-validation-for="Date"></span>
        <label asp-for="Time"></label>
        <input asp-for="Time"/>
        <span asp-validation-for="Time"></span>
        <label asp-for="Duration"></label>
        <input type="number" asp-for="Duration"/>
        <span asp-validation-for="Duration"></span>
        <select name="DurType">
            <option value="day">Days</option>
            <option value="hour">Hours</option>
            <option value="minute">Minutes</option>
        </select>       
    </div>
    <div>
        <label asp-for="Description"></label>
        <input asp-for="Description"/>
        <span asp-validation-for="Description"></span>  
    </div>
    <input type="submit" value="Add activity">
</form>

<h3>@TempData["Error"]</h3>